{
  "name": "reread",
  "type": "module",
  "private": true,
  "workspaces": [
    "tooling/*",
    "packages/convex",
    "apps/mobile"
  ],
  "scripts": {
    "dev": "bun run --filter='@reread/mobile' dev",
    "dev:ios": "bun run --filter='@reread/mobile' dev:ios",
    "dev:android": "bun run --filter='@reread/mobile' dev:android",
    "android": "bun run --filter='@reread/mobile' android",
    "ios": "bun run --filter='@reread/mobile' ios",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "bun run --filter='*' clean",
    "convex:dev": "bun run --filter='@reread/convex' dev",
    "convex:deploy": "bun run --filter='@reread/convex' deploy",
    "typecheck": "bun run --filter='@reread/mobile' typecheck",
    "format": "nix fmt",
    "test": "bun run --filter='@reread/convex' test"
  },
  "overrides": {
    "lightningcss": "1.30.1"
  },
  "devDependencies": {
    "@types/bun": "^1.2.0",
    "typescript": "^5"
  }
}
